<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:id="@+id/name_search"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:id="@+id/SearchButton"
        android:layout_alignRight="@+id/name_search"
        android:onClick="searchContact"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Contact"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/title_text"
        android:layout_below="@+id/name_search"/>
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title_text"
    android:id="@+id/new_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_name"
        android:id="@+id/new_mob"/>
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_mob"
        android:id="@+id/new_email"/>
    />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_email"
        android:layout_centerInParent="true"
        android:id="@+id/updateButton"
        android:layout_marginTop="30dp"
        android:text="UPDATE CONTACT"
        android:onClick="updateContact"
        />

</RelativeLayout>